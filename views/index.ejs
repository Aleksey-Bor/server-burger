<!DOCTYPE html>
<html lang="ru">
<head>
    <title>Главная страница</title>
</head>
<body>
    <h1><%= message1 %></h1>
    <h2><%= orders.length > 0 ? message2 : null %></h2>
    <% orders.forEach(function(order) { %>
      <h3>Заказ: <%= order.order %></h3>
      <p>Имя: <%= order.name %></p>
      <p>Телефон: <%= order.phone %></p>
  <% }); %>

  <script>
    let interval = 30000; 
      
    function refreshPage() {
        location.reload();
    }   

    setInterval(refreshPage, interval);
  </script>
</body>
</html>